<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Campo"
        android:stretchColumns="1">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ScrollingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="335dp"
                android:layout_height="271dp"
                android:layout_marginTop="1140dp"
                android:background="@drawable/artboard_1"
                android:contentDescription="Campo"
                android:scaleType="centerCrop"
                app:layout_constraintCircleRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/artboard_4"
                tools:srcCompat="@drawable/artboard_4" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="335dp"
                android:layout_height="271dp"
                android:layout_marginTop="824dp"
                android:background="@drawable/artboard_2"
                android:contentDescription="Shawrtz"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/artboard_3" />

            <ImageButton
                android:id="@+id/campo"
                android:layout_width="335dp"
                android:layout_height="271dp"
                android:layout_marginTop="192dp"
                android:background="@drawable/artboard_1"
                android:contentDescription="Five"
                android:onClick="openRest"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/artboard_1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="335dp"
                android:layout_height="271dp"
                android:layout_marginTop="508dp"
                android:background="@drawable/artboard_4"
                android:contentDescription="Alto's"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/artboard_2" />

            <Button
                android:id="@+id/seeBundles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="97dp"
                android:layout_marginTop="129dp"
                android:layout_marginEnd="98dp"
                android:text="See bundles near you"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:fitsSystemWindows="true">
            <!--            android:theme="@style/Theme.FinalQrEncoder.AppBarOverlay" >-->

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </TableLayout>
</ScrollView>